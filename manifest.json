{
    "manifest_version": 3,
    "name": "Smart Subject",
    "description": "Assistant de cr√©ation d'objets de mail pour Gmail",
    "version": "1.0",
    "action": {
      "default_popup": "./popup/index.html",
      "default_icon": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "commands": {
        "_execute_action": {
          "suggested_key": {
            "default": "Ctrl+E",
            "mac": "Command+E"
          }
        }
    },
    "background": {
      "service_worker": "background.js"
    },
    "permissions": ["activeTab", "scripting", "storage"]
  }